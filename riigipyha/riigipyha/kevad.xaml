<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Kevadpüha"
             x:Class="riigipyha.kevad">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="#29a366">
            <Image x:Name="image" Source="kevadpyha.jpg" AbsoluteLayout.LayoutBounds="15, 15, 200, 200" />
            <Label Text="1. mai 2021" TextColor="White" FontSize="15"
                AbsoluteLayout.LayoutBounds="220, 25, 70, 20" />
            <Label Text="Kevadpüha" TextColor="White" FontSize="20"
                AbsoluteLayout.LayoutBounds="220, 40, 100, 30" />
            <Label Text="Kevadpüha on Eesti riigipüha, mida peetakse 1. mail. Pühaga tähistatakse kevade saabumist."
                   TextColor="White" FontSize="14"
                AbsoluteLayout.LayoutBounds="15, 230, 350, 50" />
            <Button Text="Klõpsake nuppu" Clicked="Button_Clicked"
                    AbsoluteLayout.LayoutBounds="110, 300, 150, 50"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>